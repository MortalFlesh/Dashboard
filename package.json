{
    "name": "mf-dashboard",
    "version": "0.1.0",
    "description": "Customizeable dashboard app in react.",
    "main": "./src/index.js",
    "scripts": {
        "prebuild": "mkdir -p dist",
        "build": "yarn build:scripts",
        "postbuild": "yarn postbuild:scripts",
        "build:scripts": "browserify . > dist/dashboard.js",
        "postbuild:scripts": "uglifyjs dist/dashboard.js > dist/dashboard.min.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/MortalFlesh/Dashboard.git"
    },
    "keywords": [
        "react",
        "redux",
        "dashboard"
    ],
    "author": "MortalFlesh <mortal_flesh@seznam.cz> (https://github.com/MortalFlesh)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/MortalFlesh/Dashboard/issues"
    },
    "homepage": "https://github.com/MortalFlesh/Dashboard",
    "dependencies": {
        "classnames": "^2.2.5",
        "core-js": "^2.4.1",
        "immutable": "^3.8.1",
        "inversify": "^4.1.0",
        "inversify-vanillajs-helpers": "^2.0.0",
        "prop-types": "^15.5.8",
        "react": "^15.5.4",
        "react-dom": "^15.5.4",
        "react-redux": "^5.0.4",
        "redux": "^3.6.0",
        "redux-observable": "^0.14.1",
        "reflect-metadata": "^0.1.10",
        "remote-redux-devtools": "^0.5.7",
        "rxjs": "^5.3.0"
    },
    "devDependencies": {
        "babel-cli": "^6.24.1",
        "babel-plugin-decorator-metadata": "^0.3.0",
        "babel-plugin-syntax-decorators": "^6.13.0",
        "babel-preset-env": "^1.4.0",
        "babel-preset-react": "^6.24.1",
        "babelify": "^7.3.0",
        "browserify": "^11.1.0",
        "flow-bin": "^0.46.0",
        "uglify-js": "^3.0.4"
    },
    "browserify": {
        "transform": [
            [
                "babelify",
                {
                    "comments": false
                }
            ]
        ]
    },
    "browser": {
        "reflect-metadata": "./node_modules/reflect-metadata/Reflect.js"
    },
    "babel": {
        "presets": [
            "env",
            "react"
        ],
        "plugins": [
            "babel-plugin-syntax-decorators",
            "babel-plugin-decorator-metadata"
        ]
    }
}
