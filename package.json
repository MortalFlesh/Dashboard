{
  "name": "mf-dashboard",
  "version": "1.0.0",
  "description": "Customizeable dashboard app in react.",
  "main": "./src/index.js",
  "scripts": {
    "prebuild": "mkdir -p cache",
    "build:scripts": "browserify . > cache/index.js",
    "build": "npm run build:scripts",
    "postbuild:scripts": "uglifyjs cache/index.js > cache/index.min.js",
    "postbuild": "npm run postbuild:scripts",
    "watch:scripts": "watch 'npm run build:scripts' src/",
    "watch": "parallelshell 'npm run watch:scripts'",
    "start": "npm run watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MortalFlesh/Dashboard.git"
  },
  "keywords": [
    "react",
    "dashboard"
  ],
  "author": "MortalFlesh <mortal_flesh@seznam.cz> (https://github.com/MortalFlesh)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MortalFlesh/Dashboard/issues"
  },
  "homepage": "https://github.com/MortalFlesh/Dashboard",
  "dependencies": {
    "classnames": "^2.1.3",
    "eventemitter3": "^1.1.1",
    "flux": "^2.1.1",
    "immutable": "^3.7.5",
    "react": "^0.14.0-rc1",
    "react-addons-pure-render-mixin": "^0.14.0-rc1",
    "react-dom": "^0.14.0-rc1"
  },
  "devDependencies": {
    "babelify": "^6.3.0",
    "browserify": "^11.1.0",
    "parallelshell": "^2.0.0",
    "uglify-js": "*",
    "watch": "^0.16.0"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
